{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es5", "es6", "dom"],
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "./plugins/**/*",
    "./typings/**/*",
    "./build/**/*"
  ]
}
